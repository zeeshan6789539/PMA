        {
          "name": "POST /api/auth/login (SUPERADMIN)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "pm.test('login success', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); pm.expect(json).to.have.property('data'); });",
                  "if (json && json.data && json.data.token) { pm.collectionVariables.set('token', json.data.token); }",
                  "if (json && json.data && json.data.user && json.data.user.id) { pm.collectionVariables.set('superadminId', json.data.user.id); }",
                  "pm.environment.unset('token');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
